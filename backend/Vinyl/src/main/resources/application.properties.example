# IMPORTANT: Environment variables are loaded from .env file in project root
# Copy .env.example to .env and configure your values before running the application
# Required variables: DB_NAME, DB_USER, DB_PASSWORD, POSTGRES_PORT, JWT_SECRET, JWT_EXPIRATION, SERVER_PORT, OPENSEARCH_ADMIN_PASSWORD, OPENSEARCH_PORT

spring.application.name=vinylExchange

# Debug (WARNING: Set to INFO or WARN in production environments)
logging.level.org.springframework.security=DEBUG

#Multipart file size
spring.servlet.multipart.max-file-size=38MB
spring.servlet.multipart.max-request-size=38MB

#Database
spring.datasource.url=jdbc:postgresql://localhost:${POSTGRES_PORT}/${DB_NAME}
spring.datasource.username=${DB_USER}
spring.datasource.password=${DB_PASSWORD}
spring.datasource.driver-class-name=org.postgresql.Driver

# Jpa
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.jdbc.lob.non_contextual_creation=true

#flyway
# flyway:
#     enabled: true
#     baseline-on-migrate: true
#     locations: classpath:db/migration
#     validate-on-migrate: true

#Server
server.port=${SERVER_PORT}
server.error.include-message=always
server.error.include-binding-errors=always

#SSecurity
jwt.secret=${JWT_SECRET}

# 1hour-ms
jwt.expiration=${JWT_EXPIRATION}

#Base app url
app.base-url=http://localhost:${SERVER_PORT}

#file upload directory
file.upload-listing-dir=uploads/listings/
file.upload-cms-dir=uploads/cms/
file.image.url-path=/uploads/listings/